[core]
  # Excludesfiles allows us to set a global list of things to ignore
  excludesfile = ~/.gitignore_global
  editor = '/Applications/Visual Studio Code.app/Contents/MacOS/Electron' -w

# These are custom color options for the console
[color]
  status = auto
  diff = auto
  branch = auto

[color "status"]
  untracked = cyan
  changed = green
  added = yellow

# Aliases are command shortcuts
[alias]

